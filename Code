#include <iostream>
#include <stdlib.h>
using namespace std;

int main()
{
    int guess = 1;
    int nguess = 1;
    int correct = rand() % 100 + 1;
    cout << "Guess a number between 1 and 100" << endl;
    cin >> guess;
    while(correct>guess) {
    cout << "Your guess is too low" << endl << endl;
   cout << "Try Again" << endl;
   cin >> guess;
   ++nguess;
    }

    while (correct<guess) {
        cout << "Your guess is too high" << endl << endl;
       cout << "Try Again" << endl;
        cin >> guess;
        ++nguess;
    }
    if (correct == guess) {
        cout << "You are correct!" << endl;
        cout << "The number of guesses was " << nguess;

    }

    return 0;
}
